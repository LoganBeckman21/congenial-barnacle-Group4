<body>
    <h1>My Bookings</h1>
    <% bookings.forEach(booking => { %>
        <div class="booking">
            <p>Course: <%= booking.course %></p>
            <p>Time: <%= booking.selectedTime %></p>
            <!-- Form to update a booking -->
            <form action="/update-booking" method="post">
                <input type="hidden" name="bookingId" value="<%= booking._id %>">
                <input type="text" name="newName" placeholder="New Name" value="<%= booking.name %>">
                <input type="text" name="newTime" placeholder="New Time" value="<%= booking.selectedTime %>">
                <input type="hidden" name="email" value="<%= email %>">
                <button type="submit">Update</button>
            </form>
            <!-- Form to delete a booking -->
            <form action="/delete-booking" method="post">
                <input type="hidden" name="bookingId" value="<%= booking._id %>">
                <input type="hidden" name="email" value="<%= email %>">
                <button type="submit">Delete</button>
            </form>
        </div>
    <% }); %>
</body>

