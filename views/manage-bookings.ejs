<% bookings.forEach(function(booking) { %>
  <div>
      <p>Course: <%= booking.course %></p>
      <p>Time: <%= booking.selectedTime %></p>
      <form method="post" action="/update-booking">
        <input type="hidden" name="bookingId" value="<%= booking._id %>" />
        <input type="text" name="newName" placeholder="Enter new name" value="<%= booking.name %>" required />
        <input type="text" name="newTime" placeholder="Enter new time" value="<%= booking.selectedTime %>" required />
        <button type="submit">Update</button>
    </form>
    
      <form action="/delete-booking" method="post">
          <input type="hidden" name="bookingId" value="<%= booking._id %>" />
          <button type="submit">Delete</button>
      </form>
  </div>
<% }); %>

  

